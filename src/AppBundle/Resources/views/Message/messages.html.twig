<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,300' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="{{ asset('bundles/app/css/messages.css') }}" type="text/css" media="all" />

  </head>
  <body>

      <div class="container">
          <div class="contacts-box">
              <div class="header-contacts">
                  <input class="search" type="text" name="name" value="" placeholder="search">
              </div>
              <div class="container-contacts">
                  <a class="contact create-group" href="">+</a>
                  {% for group in groups %}

                  <a class="contact {% if group.id == current_group.id %} active {% endif %}" href="/group/{{ group.id }}">

                          {{ group.name }}

                  </a>
                  {% endfor %}
              </div>
          </div>
          <div class="messages-box">
              <div class="header-box">
                  <h3>{{ current_group.name }}</h3>
              </div>
              <div class="content-box" id="divExample">
                {% for message in messages %}
                    {% if message.user.id == user_id %}
                        <p class="msg me">
                    {% else %}
                        <p class="msg other">
                        <span class="msg-username"> ~ {{ message.user.firstname }} {{ message.user.lastname }}</span>
                    {% endif %}

                    {{ message.content }}
                        <span class="msg-date">{{ message.dateCreated|date('d/m/Y H:i') }}</span>
                        </p>

                {% endfor %}
              </div>
              <div class="write-box">
                  <form action="{{ path('group', {id_group:id_group}) }}" method="post">
                        {{ form_widget(form.content) }}

                        <input class="send-message-button" type="submit" value="send" />
                        {{ form_rest(form) }}
                  </form>


                <!--<input type="text" name="name" value="" placeholder="Taper un message">-->
              </div>

      </div>
    <script>
                var objDiv = document.getElementById("divExample");
                objDiv.scrollTop = objDiv.scrollHeight;
        </script>
  </body>
</html>
