{% extends "UserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form class="login-form" action="{{ path("fos_user_security_check") }}" method="post">

    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

    <label for="username">Identifiant :</label>
    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />

    <label for="password">Mot de passe :</label>
    <input type="password" id="password" name="_password" required="required" />

    <input class="check-memory" type="checkbox" id="remember_me" name="_remember_me" value="on" />
    <label class="check-memory" for="remember_me">Se souvenir de moi</label>

    <a class="login-button">SIGN UP</a>
    <input class="login-button" type="submit" id="_submit" name="_submit" value="SIGN IN" />

</form>
{% endblock fos_user_content %}
